{
  "name": "archipel-app",
  "productName": "Archipel",
  "version": "2.0.1",
  "license": "MIT",
  "description": "Archipel meta repository",
  "author": "Archipel:Somoco Team",
  "scripts": {
    "bootstrap": "mgit bootstrap && lerna bootstrap --hoist",
    "update": "mgit update && lerna bootstrap --hoist",
    "server": "cd packages/server; ARCHIPEL_STATIC_PATH=../app/dist/web npm run start",
    "electron": "cd packages/electron; NODE_ENV=development npm run start",
    "watch": "cd packages/app; npm run watch",
    "dev": "NODE_ENV=development npm-run-all -p watch server electron",
    "lint": "standard"
  },
  "standard": {
    "ignore": []
  },
  "devDependencies": {
    "lerna": "^3.4.0",
    "mgit2": "^0.8.0",
    "npm-run-all": "^4.1.3",
    "opn": "^5.3.0",
    "standard": "^11.0.1",
    "tape": "^4.9.1"
  }
}
