{
  "name": "archipel-app",
  "productName": "Archipel",
  "version": "2.0.1",
  "license": "MIT",
  "description": "Archipel Desktop App",
  "author": "Archipel:Somoco Team",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "pretest": "npm run lint",
    "test": "npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test babel-tape-runner -r ./unit-tests/_helpers/*.js unit-tests/*.js",
    "lint": "prettier-standard 'app/**/*.js' 'tests/**/*.js' 'lib/**/*.js' 'unit-tests/*.js' && standard",
    "deps": "cross-env DEBUG=* dependency-check . --detective precinct --entry app/index.js",
    "burnthemall": "rm -rf ~/.electron && npm run clean && rm -f package-lock.json && npm install",
    "dev": "cross-env NODE_ENV=development npm-run-parallel start watch",
    "build:prod": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --watch --mode=development",
    "pack": "npm run build:prod && npm run pack:all",
    "pack:os": "build --dir",
    "pack:all": "npm run pack:os -- --linux --mac --win",
    "dist": "npm run build:prod && npm run dist:os",
    "dist:os": "build",
    "dist:all": "npm run dist:os -- --linux --mac --win"
  },
  "standard": {
    "ignore": []
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-tape-runner": "^2.0.1",
    "cross-env": "^5.1.6",
    "dependency-check": "^3.1.0",
    "devtron": "^1.4.0",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "electron-devtools-installer": "^2.2.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-adapter-react-helper": "^1.2.3",
    "gaze": "^1.1.3",
    "npm-run-parallel": "^0.6.0",
    "precinct": "^4.2.0",
    "prettier-standard": "^8.0.1",
    "rebass": "^1.0.7",
    "standard": "^11.0.1",
    "tape": "^4.9.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "electron-default-menu": "^1.0.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "styled-components": "^3.2.6"
  },
  "build": {
    "appId": "io.archipel.app",
    "mac": {
      "category": "public.app-category.utilities",
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
    },
    "protocols": [
      {
        "name": "Dat Link",
        "schemes": [
          "dat"
        ]
      }
    ]
  }
}
