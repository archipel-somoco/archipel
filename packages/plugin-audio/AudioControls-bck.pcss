.ctrl {
  @apply flex items-center justify-start w-full border-2 border-grey-darkest bg-grey-darkest text-grey-lightest text-grey-lightest text-xl;
}

.ctrl Button {
  @apply w-32
}

.ctrl input::-webkit-inner-spin-button,
.ctrl input::-webkit-outer-spin-button {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    margin: 0;
}

.ctrl .verticalLine {
  border-left: thick solid #ff0000;
}

.ctrl input {
  @apply w-48;
  -moz-appearance:textfield
}
