.btn {
  @apply border-2 border-grey-darkest px-4 py-2 text-center bg-grey-darkest text-grey-lightest;
  line-height: 1rem;
}

.btn:hover {
  /* @apply text-red bg-grey-lighter; */
  box-shadow: 0 0 6px rgba(50,0,0,0.5);
  @apply text-red-lightest;
}

.btn:focus {
  @apply outline-none border-red;
}
